# Default
*        text=auto

# Text Files
*.sql           text
*.html          text diff=html
*.css           text diff=css
*.js            text eol=lf
*.json          text
*.md            text
*.txt           text
*.yml           text

# Bash
*.sh text eol=lf

# LFS - Archives
*.7z filter=lfs diff=lfs merge=lfs -text
*.br filter=lfs diff=lfs merge=lfs -text
*.gz filter=lfs diff=lfs merge=lfs -text
*.tar filter=lfs diff=lfs merge=lfs -text
*.zip filter=lfs diff=lfs merge=lfs -text

# LFS - Images
*.gif filter=lfs diff=lfs merge=lfs -text binary
*.ico filter=lfs diff=lfs merge=lfs -text binary
*.jpg filter=lfs diff=lfs merge=lfs -text binary
*.png filter=lfs diff=lfs merge=lfs -text binary
*.webp filter=lfs diff=lfs merge=lfs -text binary
